# .env.example

DJANGO_ENV=development
SECRET_KEY=your-very-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
DJANGO_API_PREFIX=/api/v1/

# Set these in production (comma-separated). Leave empty in local dev.
CSRF_TRUSTED_ORIGINS=

# Used in production. In development, the backend allows all origins.
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Production security defaults (often True behind HTTPS)
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_SESSION_COOKIE_SECURE=False
DJANGO_CSRF_COOKIE_SECURE=False

DJANGO_STATIC_ROOT=./staticfiles/
DJANGO_MEDIA_ROOT=./mediafiles/
DATASCHEMA_UPLOAD_PATH=dataschema_uploads/

# AI Copilot Configuration
POE_API_KEY=your_poe_api_key_here
ACTIVE_POE_MODEL=gpt-4o
POE_MODEL=gpt-4o
REDIS_URL=redis://localhost:6379/0
CHROMA_PERSIST_DIR=./chroma_db
AI_DEBUG=false

DB_NAME=your_db
DB_USER=your_user
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432